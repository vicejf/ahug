{
  "name": "ahug-code-generator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",
  "description": "A code generator tool for creating various code templates",
  "author": "Ahug Team",
  "homepage": "https://github.com/your-organization/ahug",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-organization/ahug.git"
  },
  "bugs": {
    "url": "https://github.com/your-organization/ahug/issues"
  },
  "build": {
    "appId": "com.ahug.app",
    "productName": "Ahug Code Generator",
    "directories": {
      "output": "release/${version}",
      "buildResources": "assets",
      "app": "."
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ]
    },
    "electronVersion": "40.2.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently --kill-others-on-fail \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:preview": "npm run build && electron ."
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "antd": "^6.2.3",
    "ejs": "^4.0.1",
    "electron-store": "^11.0.2",
    "iconv-lite": "^0.7.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.28.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^8.0.0-beta.13",
    "wait-on": "^9.0.3"
  },
  "pnpm": {
    "overrides": {
      "vite": "^8.0.0-beta.13"
    },
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
